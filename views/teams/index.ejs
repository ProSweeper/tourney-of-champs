<%- include('../partials/header') %>
    <h2 class="team-name">Local Teams</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Team Name</th>
                <th>Division</th>
            </tr>
        </thead>
        <tbody>
            <% if (teams.length) { %>
                <% teams.forEach(function(team){ %>
                    <tr>
                        <td><a href="/teams/<%= team._id %>"><%= team.teamName %></a></td>
                        <td><%= team.skillLevel %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="2">No Teams Yet</td>
                </tr>
            <% }%>
        </tbody>
    </table>
<%- include('../partials/footer') %>